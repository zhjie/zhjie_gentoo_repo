+	int a;
+	spin_lock(&dds.node_lock);
+	for(a=1;a<DDS_NODE_MAX;++a){//0 is debug
+		if(dds.node[a].regist==0){
+			dds.node[a].regist=1;
+			dds.node[a].brake_sync=0;
+			spin_unlock(&dds.node_lock);
+			printk(KERN_ERR "dds regist %d\n",a);
+			return &dds.node[a];
+		}
+	}
+	spin_unlock(&dds.node_lock);
+	return NULL;
+}
+static void dds_unregist(dds_node_st* node){
+	if(node==NULL)
+		return;
+	spin_lock(&dds.node_lock);
+	node->regist=0;
+	node->length=0;
+	node->timeout=0;
+	node->srcmac[0]=0;
+	node->srcmac[1]=0;
+	node->srcmac[2]=0;
+	node->srcmac[3]=0;
+	node->srcmac[4]=0;
+	node->srcmac[5]=0;
+	node->destmac[0]=0;
+	node->destmac[1]=0;
+	node->destmac[2]=0;
+	node->destmac[3]=0;
+	node->destmac[4]=0;
+	node->destmac[5]=0;
+	node->brake_sync=0;
+	spin_unlock(&dds.node_lock);
+	printk(KERN_ERR "dds unregist %d\n",(int)node->port);
+}
+static long dds_ioctl(struct file *file, unsigned int cmd, unsigned long arg){
+	//printk(KERN_ERR "dds_ioctl %d\n",cmd);
+	
+	
+	cmd&=0xFF;
+	if(cmd == DDS_REGIST_CMD){
+		file->private_data = dds_regist();
+		return file->private_data!=NULL?((dds_node_st*)file->private_data)->port:-EBUSY;  
+	}
+	if(cmd == DDS_UNREGIST_CMD){
+		dds_unregist((dds_node_st*)file->private_data);
+		file->private_data=NULL;
+		return 0;
+	}
+	if(cmd == DDS_NODE_MAX_CMD){
+		return DDS_NODE_MAX;
+	}
+	if(cmd == DDS_ETHERTYPE_CMD){
+		return DDS_ETHERTYPE;
+	}
+		
+	if(file->private_data==NULL){
+		return -EFAULT;
+	}
+	dds_node_st* node = (dds_node_st*)file->private_data;
+	
+	switch(cmd){
+	case DDS_CLEAR_CMD://clear buffer
+		while(node->rp!=node->wp){
+			int next = node->rp+1;
+			if(next>=DDS_RCVBF_MAX)
+				next=0;
+			node->rp = next;
+		}
+		node->brake_sync=0;
+		node->drop=0;
+		break;
+	case DDS_TIMEOUT_CMD://set timeout
+		if(get_user(node->timeout,(int __user *)arg)!=0){
+			return -EFAULT;
+		}
+		break;
+	case DDS_FILTER_SRC_CMD://set mac address
+		if(copy_to_user(node->srcmac,(void __user *)arg  , 6)!=0){
+				return -EFAULT;
+		}
+		break;
+	case DDS_FILTER_DEST_CMD://set mac address
+		if(copy_to_user(node->destmac,(void __user *)arg  , 6)!=0){
+			return -EFAULT;
+		}
+		break;
+	case DDS_FILTER_LEN_CMD://set length fillter
+		if(get_user(node->length,(int __user *)arg)!=0){
+			return -EFAULT;
+		}
+		break;
+	case DDS_WAKEUP_CMD://set length fillter
+		node->brake_sync=1;
+		wake_up_interruptible(&node->sync);
+		break;
+	default:
+		return -EFAULT;
+	}
+	return 0;
+}
+static ssize_t dds_read(struct file * file, char __user * buf, size_t siz, loff_t * unused){
+	int ret =0;
+	dds_node_st* node;
+	dds_buf_st* skbBuf;
+	struct sk_buff* skb=NULL;
+	struct skb_seq_state seq;
+	unsigned int consumed=0;
+	
+	if(file->private_data==NULL){
+		return -EFAULT;
+	}
+	
+	(void)unused;
+	
+	node = (dds_node_st*)file->private_data;
+	
+	if(node->rp==node->wp){
+		node->sleep=1;
+		wait_event_interruptible_timeout(node->sync,node->rp!=node->wp||node->brake_sync,node->timeout==0?(HZ/10):(HZ*node->timeout/1000) );//100 msec
+		node->sleep=0;
+		if(node->brake_sync){
+			node->brake_sync=0;
+			return 0;
+		}
+		if(node->rp==node->wp){
+			return 0;
+		}
+	}
+	
+	skbBuf = &node->skbBufs[node->rp];
+	skb = skbBuf->skb;
+	skbBuf->skb=NULL;
+	if(skb==NULL){
+		goto exiterr;
+	}
+	if(unlikely(siz<2)){
+		printk(KERN_ERR "dds recv cperr 1\n");
+		ret =  -EFAULT;
+		goto exiterr;
+	}
+	if(unlikely(copy_to_user(buf  ,skbBuf->head ,2)!=0)){
+		printk(KERN_ERR "dds recv cperr 2\n");
+		ret =  -EFAULT;
+		goto exiterr;
+	}
+	buf+=2;
+	ret+=2;
+	siz-=2;
+	
+	if(siz< skb->len){
+		if(siz>=42)//ether limit 60byte - 6-6-2
+			printk(KERN_ERR "dds recv over size port=%d %d %d\n",(int)node->port ,(int)skb->len , (int)siz);
+	}else{
+		siz= skb->len;
+	}
+
+
+	skb_prepare_seq_read(skb, 0, siz, &seq);
+	while (1) {
+		unsigned int avail;
+		const u8 *ptr;
+		size_t cp = siz;
+		avail = skb_seq_read(consumed, &ptr, &seq);
+		if(avail==0){
+			if(siz>0){
+				ret =  0;
+				printk(KERN_ERR "dds recv cperr 3\n");
+			}
+			break;
+		}else if(siz==0){
+			skb_abort_seq_read(&seq);
+			break;
+		}
+		if(avail<cp)
+			cp=avail;
+			
+		if(unlikely(copy_to_user(buf  ,ptr ,cp)!=0)){
+			skb_abort_seq_read(&seq);
+			ret =  0;
+			printk(KERN_ERR "dds recv cperr 4\n");
+			break;
+		}
+		consumed+=avail;
+		buf+=cp;
+		ret+=cp;
+		siz-=cp;
+	}
+exiterr:
+	if(skb!=NULL){
+		kfree_skb(skb);
+	}
+	
+	int next = node->rp+1;
+	if(next>=DDS_RCVBF_MAX)
+		next=0;
+	node->rp = next;
+	
+	return ret;
+}
+static int dds_open(struct inode *inode, struct file *file){
+	file->private_data =NULL;
+	return 0;
+}
+static int dds_release(struct inode *inode, struct file *file){
+	dds_unregist((dds_node_st*)file->private_data);
+	file->private_data=NULL;
+	return 0;
+}
+
+static int dds_receive(struct sk_buff *skb, struct net_device *dev,
+		   struct packet_type *pkttype, struct net_device *orig_dev)
+{
+	int siz = skb->len-2;
+	int err=0;
+	int wake=0;
+	struct ethhdr* pHdr = eth_hdr(skb);  
+	unsigned char* hed;
+	unsigned char po;
+	unsigned char ctrl;
+	
+	if (unlikely(2 > skb_headlen(skb))) {
+		if (unlikely(skb_linearize(skb) != 0)) {
+			printk(KERN_ERR "dds drop %02x:%02x:%02x:%02x:%02x:%02x err=0\n",pHdr->h_source[0],pHdr->h_source[1],pHdr->h_source[2],pHdr->h_source[3],pHdr->h_source[4],pHdr->h_source[5]);
+			kfree_skb(skb);
+			return NET_RX_DROP;
+		}
+	}
+	hed = skb_pull_data(skb, 2);
+	po = hed[0]&0x7F;
+	ctrl = hed[1];
+
+	
+	if(po>=DDS_NODE_MAX){
+		err = 1;
+		goto drop;
+	}
+	
+	dds_node_st* node = &dds.node[po];
+	
+	if(node->regist==0){
+		err = 2;
+		goto drop;
+	}
+	
+	if(node->length){//enable length fillter
+		if(node->length>=44){
+			if(node->length != siz){//ether limit 60byte - 6-6-2-2
+				err = 3;
+				goto drop;
+			}
+		}else{
+			if(siz>44){
+				err = 4;
+				goto drop;
+			}
+		}
+	}
+	if(node->srcmac[0]!=0){
+		if( pHdr->h_source[0]!=node->srcmac[0]||
+			pHdr->h_source[1]!=node->srcmac[1]||
+			pHdr->h_source[2]!=node->srcmac[2]||
+			pHdr->h_source[3]!=node->srcmac[3]||
+			pHdr->h_source[4]!=node->srcmac[4]||
+			pHdr->h_source[5]!=node->srcmac[5]){
+			err = 5;
+			goto drop;
+		}
+	}
+	if(node->destmac[0]!=0){
+		if( pHdr->h_dest[0]!=node->destmac[0]||
+			pHdr->h_dest[1]!=node->destmac[1]||
+			pHdr->h_dest[2]!=node->destmac[2]||
+			pHdr->h_dest[3]!=node->destmac[3]||
+			pHdr->h_dest[4]!=node->destmac[4]||
+			pHdr->h_dest[5]!=node->destmac[5]){
+			err = 6;
+			goto drop;
+		}
+	}
+	int next = node->wp+1;
+	if(next>=DDS_RCVBF_MAX)
+		next=0;
+	
+	if(node->rp==next){//empty buffer
+		err = 7;
+		node->drop++;
+		goto drop;
+	}else if(node->drop){
+		printk(KERN_ERR "dds overflow port:%d count=%d\n",po,node->drop);
+		node->drop=0;
+	}
+	
+
+	
+	if(node->skbBufs[node->wp].skb)
+		kfree_skb(node->skbBufs[node->wp].skb);
+	
+	node->skbBufs[node->wp].skb=skb;
+	node->skbBufs[node->wp].head[0]=hed[0];
+	node->skbBufs[node->wp].head[1]=hed[1];
+	
+	if(node->rp==node->wp || node->sleep){
+		wake = 1;
+	}
+	node->wp = next;
+	if(wake){
+		wake_up_interruptible(&node->sync);
+	}
+	
+	return NET_RX_SUCCESS;
+drop:
+	if(err!=7)
+		printk(KERN_ERR "dds drop %02x:%02x:%02x:%02x:%02x:%02x port:%d ctrl=%03x siz=%d err=%d\n",pHdr->h_source[0],pHdr->h_source[1],pHdr->h_source[2],pHdr->h_source[3],pHdr->h_source[4],pHdr->h_source[5],po,ctrl,siz,err);
+	kfree_skb(skb);
+	return NET_RX_DROP;
+}
