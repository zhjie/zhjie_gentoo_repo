+static int __init diretta_direct_init(void)
+{
+	printk("dds_init\n");
+	int ret;
+	int a;
+	memset(&dds,0,sizeof(dds));
+	spin_lock_init(&dds.node_lock);
+	for(a=0;a<DDS_NODE_MAX;++a){
+		dds.node[a].port=a;
+		init_waitqueue_head(&dds.node[a].sync);
+	}
+	ret = register_chrdev(dds.major, "diretta-direct", &dds_fops);
+	if (ret<0){
+		return ret;
+	}
+	dds.major = ret;
+	
+	#if LINUX_VERSION_CODE < KERNEL_VERSION(6, 4, 0) && !defined(RHEL_RELEASE_CODE)
+	  dds.class = class_create(THIS_MODULE, "diretta-direct");
+	#else
+	  dds.class = class_create("diretta-direct");
+	#endif	
+	if (IS_ERR(dds.class)) {
+		ret = PTR_ERR(dds.class);
+		unregister_chrdev(dds.major,"diretta-direct");
+		return ret;
+	}
+	dds.dev = device_create(dds.class, NULL, MKDEV(dds.major, 0),NULL, "diretta-direct");
+	if (IS_ERR(dds.dev)) {
+		ret = PTR_ERR(dds.dev);
+		class_destroy(dds.class);
+		unregister_chrdev(dds.major,"diretta-direct");
+		return ret;
+	}
+	ret = device_create_file(dds.dev, &dev_attr_name);
+	if (ret<0){
+		device_destroy(dds.class, MKDEV(dds.major, 0));
+		class_destroy(dds.class);
+		unregister_chrdev(dds.major,"diretta-direct");
+		return ret;
+	}
+	
+	
+	dev_add_pack(&dds_packet_type);
+	
+	return 0;
+}
+static void __exit diretta_direct_exit(void)
+{
+	int a,b;
+	for(a=0;a<DDS_NODE_MAX;++a){
+		dds_node_st* node = &dds.node[a];
+		for(b=0;b<DDS_RCVBF_MAX;++b){
+		if(node->skbBufs[b].skb)
+			kfree_skb(node->skbBufs[b].skb);
+		}
+	}
+	
+	device_remove_file(dds.dev, &dev_attr_name);
+	device_destroy(dds.class, MKDEV(dds.major, 0));
+	
+	class_destroy(dds.class);
+	unregister_chrdev(dds.major,"diretta-direct");
+	dev_remove_pack(&dds_packet_type);
+}
